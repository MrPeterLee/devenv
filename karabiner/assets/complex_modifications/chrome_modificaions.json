{
  "title": "Chrome Modifications",
  "rules": [
    {
      "description": "Map CMD-Enter to Alt-Enter in Chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter",
            "modifiers": [
                "option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.google\\.Chrome"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Map CTRL-123 to CMD-123 in Chrome",
