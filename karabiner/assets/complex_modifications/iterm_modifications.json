{
  "title": "iTerm Modifications",
  "rules": [
    {
      "description": "Map CMD-hjlt to Alt-hjkl in iTerm2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "h",
            "modifiers": [
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.",
                "^com.googlecode.iterm2",
                "com\\.microsoft\\.rdc\\.macos"
              ]
            }
          ]
        }, 
        {
