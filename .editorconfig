root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 80

[*.{vim,sh}]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.rb]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# 4 space indentation
[*.{ini,py,py.tpl,rst}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# 4-width tabbed indentation
[*.{sh,bat.tpl,Makefile.tpl}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# and travis does its own thing
[.travis.yml]
indent_style = space
indent_size = 2
